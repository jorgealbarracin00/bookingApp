<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book a Meeting</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    * {
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }
    body {
      margin: 0;
      background: #f7f9fb;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .card {
      background: #fff;
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 400px;
      opacity: 0;
      transform: translateY(30px);
      animation: fadeInUp 0.8s ease-out forwards;
    }
    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    h1 {
      font-size: 24px;
      margin-bottom: 20px;
      color: #111;
      text-align: center;
    }
    input, select, button {
      width: 100%;
      padding: 14px;
      margin-bottom: 15px;
      border-radius: 12px;
      border: 1px solid #ccc;
      font-size: 16px;
    }
    input:focus, select:focus {
      outline: none;
      border-color: #007aff;
    }
    button {
      background: #007aff;
      color: #fff;
      font-weight: 600;
      border: none;
      transition: background 0.3s ease;
    }
    button:hover {
      background: #005fc1;
    }
  </style>
  <script src="https://www.gstatic.com/firebasejs/10.11.0/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/10.11.0/firebase-auth.js"></script>
  <script>
    const firebaseConfig = {
      apiKey: "AIzaSyAgj8wiE-bK3Y2CmiaiAwAyfHMF5LYw1qQ",
      authDomain: "bookingapp-70f7b.firebaseapp.com",
      projectId: "bookingapp-70f7b"
    };
    firebase.initializeApp(firebaseConfig);
  </script>
</head>
<body>
  <div class="card">
    <h1>ðŸ“… Book a Meeting</h1>

    <!-- Step 1: Date Selection -->
    <form method="GET" action="/">
      <input type="date" name="date" value="<%= selectedDate || '' %>" required>
      <button type="submit">Check Availability</button>
    </form>

    <!-- Step 2: Show time slots if date selected -->
    <% if (selectedDate && timeSlots && timeSlots.length > 0) { %>
      <form action="/book" method="POST">
        <input type="hidden" name="date" value="<%= selectedDate %>">

        <input type="text" name="name" placeholder="Your name" required>
        <input type="email" name="email" placeholder="Your email" required>
        <input type="text" name="phone" placeholder="Phone number" required>

        <select name="slot_id" required>
          <option value="">Select a time slot</option>
          <% timeSlots.forEach(slot => { %>
            <option value="<%= slot.id %>"><%= slot.time %></option>
          <% }); %>
        </select>

        <button type="submit">Book Now</button>
      </form>
    <% } else if (selectedDate) { %>
      <p>No available time slots for <%= selectedDate %>.</p>
    <% } %>
  </div>
  <div class="card" style="margin-top: 20px;">
    <h1>ðŸ”’ Admin Login</h1>
    <input type="email" id="admin-email" placeholder="Admin email" required>
    <input type="password" id="admin-password" placeholder="Password" required>
    <button onclick="loginAsAdmin()">Login as Admin</button>
    <button onclick="logout()">Logout</button>
  </div>
  <script>
    function loginAsAdmin() {
      const email = document.getElementById('admin-email').value;
      const password = document.getElementById('admin-password').value;

      firebase.auth().signInWithEmailAndPassword(email, password)
        .then(userCredential => userCredential.user.getIdToken())
        .then(token => {
          return fetch('/admin', {
            headers: {
              'Authorization': `Bearer ${token}`
            }
          });
        })
        .then(res => res.text())
        .then(html => {
          document.open();
          document.write(html);
          document.close();
        })
        .catch(error => {
          alert('Login failed: ' + error.message);
        });
    }

    function logout() {
      firebase.auth().signOut().then(() => {
        alert('Logged out successfully.');
        location.reload();
      }).catch((error) => {
        alert('Logout failed: ' + error.message);
      });
    }
  </script>
</body>
</html>